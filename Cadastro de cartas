#include <stdio.h>

int main() {
    // Declaração das variáveis para as duas cartas
    char estado1, estado2;
    char codigo1[5], codigo2[5];
    char cidade1[100], cidade2[100];
    int populacao1, populacao2;
    float area1, area2, pib1, pib2;
    int pontos1, pontos2;

    // Solicitar e ler as informações da primeira carta
    printf("Digite as informações da primeira carta:\n");
    printf("Estado (A-H): ");
    scanf(" %c", &estado1);  // Lê o estado da primeira carta
    printf("Código da Carta (ex: A01): ");
    scanf("%s", codigo1);  // Lê o código da carta (ex: A01)
    printf("Nome da Cidade: ");
    scanf(" %[^\n]", cidade1);  // Lê o nome da cidade, incluindo espaços
    printf("População: ");
    scanf("%d", &populacao1);  // Lê a população da cidade
    printf("Área (em km²): ");
    scanf("%f", &area1);  // Lê a área da cidade
    printf("PIB (em bilhões de reais): ");
    scanf("%f", &pib1);  // Lê o PIB da cidade
    printf("Número de Pontos Turísticos: ");
    scanf("%d", &pontos1);  // Lê o número de pontos turísticos

    // Solicitar e ler as informações da segunda carta
    printf("\nDigite as informações da segunda carta:\n");
    printf("Estado (A-H): ");
    scanf(" %c", &estado2);  // Lê o estado da segunda carta
    printf("Código da Carta (ex: A01): ");
    scanf("%s", codigo2);  // Lê o código da carta
    printf("Nome da Cidade: ");
    scanf(" %[^\n]", cidade2);  // Lê o nome da cidade
    printf("População: ");
    scanf("%d", &populacao2);  // Lê a população
    printf("Área (em km²): ");
    scanf("%f", &area2);  // Lê a área
    printf("PIB (em bilhões de reais): ");
    scanf("%f", &pib2);  // Lê o PIB
    printf("Número de Pontos Turísticos: ");
    scanf("%d", &pontos2);  // Lê o número de pontos turísticos

    // Exibir as informações da primeira carta
    printf("\nCarta 1:\n");
    printf("Estado: %c\n", estado1);
    printf("Código: %s\n", codigo1);
    printf("Nome da Cidade: %s\n", cidade1);
    printf("População: %d\n", populacao1);
    printf("Área: %.2f km²\n", area1);
    printf("PIB: %.2f bilhões de reais\n", pib1);
    printf("Número de Pontos Turísticos: %d\n", pontos1);

    // Exibir as informações da segunda carta
    printf("\nCarta 2:\n");
    printf("Estado: %c\n", estado2);
    printf("Código: %s\n", codigo2);
    printf("Nome da Cidade: %s\n", cidade2);
    printf("População: %d\n", populacao2);
    printf("Área: %.2f km²\n", area2);
    printf("PIB: %.2f bilhões de reais\n", pib2);
    printf("Número de Pontos Turísticos: %d\n", pontos2);

    return 0;
}
